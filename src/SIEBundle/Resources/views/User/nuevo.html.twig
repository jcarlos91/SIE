{% extends 'SIEBundle::main.html.twig' %}
{% block body %}
	<section>
		{{ form_start(form) }}
		{{ form_errors(form) }}
		<article>
			{{form_label(form.username)}}
			{{form_widget(form.username)}}{{form_errors(form.username)}}
		</article>
		<article>
			{{form_label(form.password)}}
			{{form_errors(form.password)}}
			{{form_widget(form.password,{ 'full_name': 'pass' })}}
		</article>
		<article>
			{{form_label(form.email)}}
			{{form_widget(form.email)}}{{form_errors(form.email)}}
		</article>
		<article>
			{{form_label(form.isActive)}}
			{{form_errors(form.isActive)}}
			{{form_widget(form.isActive)}}
		</article>
		<article>
			{{form_label(form.rol)}}
			{{form_errors(form.rol)}}
			{{form_widget(form.rol)}}
		</article>
		<article>
			<input type="submit">
		</article>
		{{ form_row(form._token) }}
		{{ form_rest(form) }}
		{{ form_end(form) }}
	</section>
{% endblock %}